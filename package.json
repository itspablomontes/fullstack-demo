{
	"name": "fullstack-demo",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev",
		"lint": "turbo run lint",
		"format": "biome format --write .",
		"check-types": "turbo run check-types",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"husky": "9.1.7",
		"lint-staged": "16.2.7",
		"turbo": "^2.7.2",
		"typescript": "5.9.2"
	},
	"lint-staged": {
		"*.{ts,js,json,md}": [
			"biome check --write --no-errors-on-unmatched"
		]
	},
	"engines": {
		"node": ">=24"
	},
	"packageManager": "npm@11.6.1",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
